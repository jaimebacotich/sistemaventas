includes:
    - ./vendor/larastan/larastan/extension.neon

parameters:
    # Progressive Quality Gates Strategy:
    # PHPStan Level 6 applied only to refactored/new code
    # Legacy code excluded from CI gates (documented technical debt)
    paths:
        - app/Services/VentaService.php
        - app/Http/Controllers/Api/VentaController.php
        - app/Http/Controllers/HealthController.php
        - app/Http/Middleware/LogContextMiddleware.php
        - app/Models/Venta.php
        - app/Models/Producto.php
        - app/Models/Cliente.php
        - app/Models/Categoria.php
    
    level: 6
    
    # Exclude paths allow full project analysis while measuring technical debt
    excludePaths:
        - app/Http/Controllers/Api/AuthController.php
        - app/Http/Controllers/Api/CategoriaController.php
        - app/Http/Controllers/Api/ClienteController.php
        - app/Http/Controllers/Api/CompraController.php
        - app/Http/Controllers/Api/ProductoController.php
        - app/Http/Controllers/Api/ProveedorController.php
        - app/Http/Controllers/Api/ReporteController.php
        - app/Http/Controllers/Api/RolController.php
        - app/Http/Controllers/Api/UsuarioController.php
        - app/Services/ReporteService.php
        - app/Models/Compra.php
        - app/Models/DetalleCompra.php
        - app/Models/DetalleVenta.php
        - app/Models/Permiso.php
        - app/Models/Persona.php
        - app/Models/Proveedor.php
        - app/Models/Rol.php
        - app/Models/User.php
    
    ignoreErrors: []
